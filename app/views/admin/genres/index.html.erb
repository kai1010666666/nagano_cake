<div class="container">
  <h4>ジャンル一覧・追加</h4>
  <table>
    <tr>
    <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <th>ジャンル名</th>
      <td><%= f.text_field :name, :placeholder=>"ジャンル名" %></td>
      <td><%= f.submit '新規登録',class:"btn btn-success" %></td>
    <% end %>
    </tr>
  </table>
  <table>
    <tr>
      <th>ジャンル</th><th></th>
    </tr>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id),class:"btn btn-success" %></td>
    </tr>
  <% end %>
  </table>
</div>