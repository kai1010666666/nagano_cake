会員ID<%= @customer.id %>
<%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
  氏名<%= f.text_field :first_name %><%= f.text_field :last_name %>
  フリガナ<%= f.text_field :first_name_kana %><%= f.text_field :last_name_kana %>
  郵便番号<%= f.text_field :postal_code %>
  住所<%= f.text_field :email %>
  電話番号<%= f.text_field :telephone_number %>
  メールアドレス<%= f.text_field :email %>
  会員会員ステータス
    <%= f.radio_button :is_deleted, false %>
    <%= f.label :is_deleted, '有効', value: false%>
    <%= f.radio_button :is_deleted, true %>
    <%= f.label :is_deleted, '退会', value: true %>
  <%= f.submit '変更を保存',class:"btn btn-success" %>
<% end %>