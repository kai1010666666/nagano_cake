<div class="container">
    <h4>商品詳細</h4>
    <div class="row">
        <div class="col">
        <%= image_tag @item.get_image(100,100) %>
        </div>
        <div class="col">
            <table>
                <tr>
                    <th>商品名</th><td><%= @item.name %></td>
                </tr>
                <tr>
                    <th>商品説明</th><td><%= @item.introduction %></td>
                </tr>
                <tr>
                    <th>ジャンル</th><td><%= @item.genre.name %></td>
                </tr>
                <tr>
                    <th><div>税込価格</div><div>(税抜価格)</div></th><td><%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>円)</td>
                </tr>
                <tr>
                    <th>販売ステータス</th>
                    <td>
                        <% if true == @item.is_active %>
                        <h6 class="text-success">販売中</h6>
                        <% else %>
                        <h6 class="text-black-50">販売停止中</h6>
                        <% end %>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div class="text-center">
        <%= link_to "編集する", edit_admin_item_path(@item),class:"btn btn-success" %>
    </div>
</div>