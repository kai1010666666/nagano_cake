<div class="container">
<div class="row">
<h4>商品一覧</h4>
<h1><%= link_to "+", new_admin_item_path %></h1>
</div>
  <table class="table">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
    <% @items.each do |item| %>
      <tr>
        <td>
          <%= item.id %>
        </td>
        <td>
          <%= link_to admin_item_path(item.id) do %>
            <%= item.name %>
          <% end %>
        </td>
        <td>
          <%= item.price.to_s(:delimited) %>
        </td>
        <td>
          <%= item.genre.name %>
        </td>
        <td>
          <% if true == item.is_active %>
          <h6 class="text-success">販売中</h6>
          <% else %>
          <h6 class="text-black-50">販売停止中</h6>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= paginate @items %>
</div>