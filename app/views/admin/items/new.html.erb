<div class="container">
  <div class="row">
    <h4>商品新規登録</h4>
  </div>
    <%= form_with model: @item, url: admin_items_path do |f| %>
    <div class="row">
      <h5 >商品画像</h5>
      <%= f.file_field :image, accept: "image/*" %>
    </div>
    <div class="row">
      <h5>商品名</h5>
        <%= f.text_field :name %>
    </div>
    <div class="row">
      <h5>商品説明</h5>
        <%= f.text_area :introduction %>
    </div>
    <div class="row">
      <h5>ジャンル</h5>
        <%= f.collection_select :genre_id, @genres, :id, :name, include_blank: "選択して下さい" %>
        <!-- f.collection_select :保存先のカラム名, 選択肢に使うオブジェクト, :一つ目の引数に渡す値, :選択肢に使うカラム名, include_blank: "選択して下さい" -->
    </div>
    <div class="row">
      <h5>税抜価格</h5>
        <%= f.text_field :price %>円
    </div>
    <div class="row">
      <h5>販売ステータス</h5>
      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active, '販売中', value: true %>
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, '販売停止中', value: false%>
    </div>
  <div class="text-center">
      <%= f.submit '新規登録', class:"btn btn-success" %>
    <% end %>
  </div>
</div>