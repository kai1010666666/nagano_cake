<h4>注文一覧履歴</h4>
  <table class="table">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to admin_orders_path(order.id) do %>
            <%= order.crated_at %>
          <% end %>
        </td>
        <td>
            <%= customer_id.name %>
        </td>
        <td>
          <%= order.amout %>
        </td>
        <td>
          <% order.order_status %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>