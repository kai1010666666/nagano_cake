<h4>注文一覧履歴</h4>
  <table class="table">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%#= link_to admin_order_path(order.id) do %>
            <%= order.created_at %>
          <%# end %>
        </td>
        <td>
            <%= order.customer.first_name %><%= order.customer.last_name %>
        </td>
        <td>
          <%= order.order_details.amout %>
        </td>
        <td>
          <% order.order_status %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>