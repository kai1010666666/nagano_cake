<div class="container">
<h4>商品一覧(全<%= @items.count %>件)</h4>
<div class="row">
    <% @items.each do |item| %>
    <div class="col-3">
        <%= link_to  item_path(item.id) do %>
        <%= image_tag item.get_image(100,100) %>
        <div class="text-left"><%= item.name %></div>
        <div class="text-left">￥<%= item.with_tax_price.to_s(:delimited) %></div>
        <% end %>
    </div>
    <% end %>
</div>
<div class="row">
<div class="text-center"><%= paginate @items %></div>
</div>
</div>