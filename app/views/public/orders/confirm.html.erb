<div "container">
    <div class='row'>
        <div class='col-9'>
<%= form_with model: @order, method: :post do |f| %>
<table border="1" style="border-collapse: collapse">
    <thead>
        <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
        </tr>
        <% @cart_items.each do |cart_item| %>
        <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price.to_s(:delimited) %>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.subtotal.to_s(:delimited) %></td>
        </tr>
        <% end %>
    </thead>
</table>
</div>
<div class='col-3'>
<table border="1" style="border-collapse: collapse">
    <tbody>
        <% @order.postage = 800 %>
        <tr>
            <th>送料</th>
            <td><%= @order.postage %></td>
        </tr>
        <tr>
            <th>商品合計</th>
            <td><%= @total.to_s(:delimited) %></td>
        </tr>
        <tr>
            <th>請求金額</th>
            <td><%= @total.to_s(:delimited) %></td>
        </tr>
    </tbody>
      </table>
    </div>
  </div>
</div>
<div>
    <h4>支払方法</h4>
    <h6><%= @order.method_payment_i18n %></h6>
</div>
<div>
    <h4>お届け先</h4>
    <h6><%= @order.address_postal_code %></h6>
    <h6><%= @order.address %></h6>
    <h6><%= @order.address_name %></h6>
</div>
<div class="text-center"><%= f.submit "注文を確定する", class:"btn btn-success"  %></div>
<% end %>