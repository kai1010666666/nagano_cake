<%= form_with model: @address, url: addresses_path do |f| %>
<%= f.text_field :postal_code, :placeholder=>"0000000" %>
<%= f.text_field :address, :placeholder=>"東京都渋谷区代々木神園町0-0" %>
<%= f.text_field :name, :placeholder=>"令和道子" %>
<%= f.submit "新規登録" %>
<% end %>
<% @addresses.each do |address| %>
郵便番号<%= address.postal_code %>
住所<%= address.address %>
宛名<%= address.name %>
<%= link_to "編集する", edit_address_path(address.id) %>
<%= link_to "削除する", address_path(address), class:"btn btn-danger" , method: :delete, "data-confirm" => "本当に消しますか？"  %>
<% end %>