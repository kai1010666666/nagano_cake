<h4>配送先登録/一覧</h4>
<%= form_with model: @address, url: addresses_path do |f| %>
<%= f.text_field :postal_code, :placeholder=>"0000000" %>
<%= f.text_field :address, :placeholder=>"東京都渋谷区代々木神園町0-0" %>
<%= f.text_field :name, :placeholder=>"令和道子" %>
<%= f.submit "新規登録",class:"btn btn-success" %>
<% end %>
<table border="1" style="border-collapse: collapse">
    <tr>
        <th>郵便番号</th><th>住所</th><th>宛名</th><th></th>
    </tr>
    <% @addresses.each do |address| %>
    <tr>
        <td><%= address.postal_code %></td><td><%= address.address %></td><td><%= address.name %></td>
        <td>
            <%= link_to "編集する", edit_address_path(address.id),class:"btn btn-success" %>
            <%= link_to "削除する", address_path(address), class:"btn btn-danger" , method: :delete %>
        </td>
    </tr>
    <% end %>
</table>